<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/nav.css">
  <link rel="stylesheet" href="/styles/book-pages/shelves.css">
  <title>My-Bookshelf</title>
</head>
<body>
  <!-- header partial-->
  <%-include('../nav.ejs', {userID: user._id})%>
  <main>
    <a href="/browse/<%=user._id%>/shelf/0">
      <section class="shelf1">
        <div class="shelfName1"><%=user.bookshelves[0]%></div>
        <div class="books1">
          <% user.books.forEach(book => { %>
            <% if (book.shelf === user.bookshelves[0]) { %>
              <div class="bookshelf1">
                <div class="spineshelf1"style="background-color:<%=book.color%>;">
                  <p><%=book.title%></p>
                </div>
              </div>
            <% } %>
          <% }) %>
        </div>
      </section>
    </a>
