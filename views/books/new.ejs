<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- nav style -->
  <link rel="stylesheet" href="/styles/nav.css">
  <link rel="stylesheet" href="/styles/book-pages/show.css">
  <script defer src="../../public/js/app.js"></script>
  <title>Book Show Page</title>
</head>
<body>
  <!-- header partial-->
  <%-include('../nav.ejs', {userID: user._id})%> 
  <main>
    <section class="bookCover">
      <div class="leftCover"></div>
      <div class="spine"></div>
      <div class="rightCover"></div>
    </section>
    <section class="bookData">
      <div class="leftPage">
        <h2>Book Lookup</h2>
        <hr />
        <form class="queryForm">
          <input name="query" class="bookQuery">
          <button class="queryButton">Search</button>
        </form>
        <hr />
      </div>
      <div class="rightPage">
        <form action="/books" method="POST">
          <h2> Title: <input type="text" name="title"> </h2>
          <h3>Author: <input type="text" name="author"></h3>
          <h4>Publication Date:
            <input type="text" name="PubDate">
          </h4>
          <hr />
          <p class='summaryBox'> Summary: <textarea type="text" name="summary" class="summaryBox"></textarea>
          </p>
          <p class='reviewBox'>Primary Review:
            <textarea name="primaryReview" class="reviewBox"></textarea>
          </p>
          <!-- What if user doesn't have any shelves yet? -->
          <label for="shelf">Shelf: </label>
          <select type="text" name="shelf" id="shelf">
            <% user.bookshelves.forEach(shelf=>{ %>
              <option value="<%=shelf%>"><%=shelf%></option>
            <% }) %>
          </select>
          <!-- <p>Color: <input type="text" name="color" id="">
          </p> -->
            <!-- radio color stuff -->
            <div class="pickcolor">
              <label for="color" class="colorCheckBox">Select Color:
              </label>
              <label for="color1" class="colorCheckBox">
                <input type="radio" name="color" id="color1" value="#BD5A2F"><span class="checkmark color1"></span>
              </label>
              <label for="color2" class="colorCheckBox">
                <input type="radio" name="color" id="color2" value="#B92A2A"><span class="checkmark color2"></span>
              </label>
              <label for="color3" class="colorCheckBox">
                <input type="radio" name="color" id="color3" value="#F28E24"><span class="checkmark color3"></span>
              </label>
              <label for="color4" class="colorCheckBox">
                <input type="radio" name="color" id="color4" value="#392720"><span class="checkmark color4"></span>
              </label>
              <label for="color5" class="colorCheckBox">
                <input type="radio" name="color" id="color5" value="#573849"><span class="checkmark color5"></span>
              </label>
              <label for="color6" class="colorCheckBox">
                <input type="radio" name="color" id="color6" value="#AF6F49"><span class="checkmark color6"></span>
              </label>
              <label for="color7" class="colorCheckBox">
                <input type="radio" name="color" id="color7" value="#B9C998"><span class="checkmark color7"></span>
              </label>
              <label for="color8" class="colorCheckBox">
                <input type="radio" name="color" id="color8" value="green"><span class="checkmark color8"></span>
              </label>
              <label for="color9" class="colorCheckBox">
                <input type="radio" name="color" id="color9" value="green"><span class="checkmark color9"></span>
              </label>
            </div>
              

          <button type="submit" class="addButton">Add Book</button>
        </form>
      </div>
      <div class="rightStack"></div>
    </section>
  </main>
  
</body>
</html>