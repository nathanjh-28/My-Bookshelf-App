<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- nav style -->
  <link rel="stylesheet" href="/styles/nav.css">
  <link rel="stylesheet" href="/styles/book-pages/show.css">
  <title>Book Show Page</title>
</head>
<body>
  <!-- header partial-->
  <%-include('../nav.ejs', {userID: user._id})%> 
  <main>
    <section class="bookCover">
      <div class="leftCover" style="background-color: <%=book.color%>;"></div>
      <div class="spine" style="background-color: <%=book.color%>;"></div>
      <div class="rightCover" style="background-color: <%=book.color%>;"></div>
    </section>
    <section class="bookData">
      <div class="leftPage">
      </div>
      <div class="rightPage">
        <form action="/books/<%=book._id%>?_method=PUT" method="POST">
          <h2 class="title"> Title: <input type="text" name="title" value="<%=book.title%>"></h2>
          <h3 class="author">Author: <input type="text" name="author" value="<%=book.author%>"></h3>
          <h4 class="date">Publication Year: <input type="text" name="PubDate" value="<%=book.PubDate%>"></h4>
          <hr />
          <p class='addBookSummaryHead'> Summary: <textarea type="text" name="summary" class="summaryBox"><%=book.summary%></textarea>
          </p>
          <p class='addBookReviewHead'>Primary Review:
            <textarea name="primaryReview" class="reviewBox" ><%=book.primaryReview%></textarea>
          </p>

          <div class="shelfPick">
            <label for="shelf" class="shelfPickHead">Shelf: </label>
            <select type="text" name="shelf" id="shelf">
              <% user.bookshelves.forEach(shelf=>{ %>
                <option value="<%=shelf%>"<%= book.shelf===shelf ?'selected': null %>> <%=shelf%></option>
              <% }) %>
            </select>
          </div>

          <p class="colorPickHead">Select Book Color:</p>
            <div class="pickcolor">
              <label for="color1" class="colorCheckBox">
                <input type="radio" name="color" id="color1" value="#BD5A2F" <%=book.color === "#BD5A2F" ? 'checked' : null%>><span class="checkmark color1"></span>
              </label>
              <label for="color2" class="colorCheckBox">
                <input type="radio" name="color" id="color2" value="#B92A2A" <%=book.color === "#B92A2A" ? 'checked' : null%>><span class="checkmark color2"></span>
              </label>
              <label for="color3" class="colorCheckBox">
                <input type="radio" name="color" id="color3" value="#F28E24" <%=book.color === "#F28E24" ? 'checked' : null%>><span class="checkmark color3"></span>
              </label>
              <label for="color4" class="colorCheckBox">
                <input type="radio" name="color" id="color4" value="#392720" <%=book.color === "#392720" ? 'checked' : null%>><span class="checkmark color4"></span>
              </label>
              <label for="color5" class="colorCheckBox">
                <input type="radio" name="color" id="color5" value="#573849" <%=book.color === "#573849" ? 'checked' : null%>><span class="checkmark color5"></span>
              </label>
              <label for="color6" class="colorCheckBox">
                <input type="radio" name="color" id="color6" value="#AF6F49" <%=book.color === "#AF6F49" ? 'checked' : null%>><span class="checkmark color6"></span>
              </label>
              <label for="color7" class="colorCheckBox">
                <input type="radio" name="color" id="color7" value="#B9C998" <%=book.color === "#B9C998" ? 'checked' : null%>><span class="checkmark color7"></span>
              </label>
              <label for="color8" class="colorCheckBox">
                <input type="radio" name="color" id="color8" value="#003399" <%=book.color === "#003399" ? 'checked' : null%>><span class="checkmark color8"></span>
              </label>
            </div>
          
          <!-- <p>Color<input type="text" name="color" id=""value="<%=book.color%>">
          </p> -->
        <button type="submit">Update Book</button>
        </form>
      </div>
      <div class="rightStack"></div>
    </section>
  </main>
  
</body>
</html>