<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- nav style -->
  <link rel="stylesheet" href="/styles/nav.css">
  <link rel="stylesheet" href="/styles/main.css">
  <script defer src="/js/app.js"></script>
  
  <title>My-Bookshelf</title>
</head>
<body>


  <main>
    <section class="appName">
      <h1>My Bookshelf</h1>
    </section>
    <section class="adduser">
      <form action="/users/profile/?_method=PUT" method="POST">
        <label for="displayName">Name: </label>
        <input id="displayName" type="text" name="displayName" value="<%=user.displayName%>">
        <label for="email">Email: </label>
        <input id="email" type="email" name="email" value="<%=user.email%>">
        <label for="password"> New Password: </label>
        <input id="password" type="password" name="password">
        <label for="favQuote">Favorite Quote:</label>
        <textarea type="text" name="favQuote" id="favQuote"><%=user.favQuote%></textarea>
        <label for="bookshelf"> Your Bookshelves:</label>
        <input type="text" name="bookshelf1" id="bookshelf" value="<%=user.bookshelves[0]%>">
        <input type="text" name="bookshelf2" id="bookshelf" value="<%=user.bookshelves[1]%>">
        <input type="text" name="bookshelf3" id="bookshelf" value="<%=user.bookshelves[2]%>">
        <input type="text" name="bookshelf4" id="bookshelf" value="<%=user.bookshelves[3]%>">
        <label for="privacy"> Set Account to Private</label>
        <input type="checkbox" name="privacy" id="privacy" <%=user.privacy ? 'checked' : null%>>
        <!-- select picture of themselves -->
        <button type="submit">Edit User Settings</button>
      </form>
      <!-- Multer bs -->
      <label for="">Upload your own profile picture</label>
      <form action="/users/upload" method="POST" enctype="multipart/form-data">
        <div class="file-field input-field">
          <div class="btn">
            <span>File</span>
            <input name="profile-img" type="file">
          </div>
          <!-- <div class="file-path-wrapper">
            <input class="file-path validate" type="text">
          </div> -->
        </div>
        <button type="submit" class="btn">Change Profile Pic</button>
      </form>
    </section>
  </main>
  
</body>
</html>